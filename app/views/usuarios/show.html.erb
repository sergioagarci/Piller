<% provide(:title, @usuario.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @usuario %>
        <%= @usuario.name %>
      </h1>
    </section>
	  <section>
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if signed_in? %>
  </aside>
  <div class="span8">
    <% if @usuario.microvideos.any? %>
      <h3>Pillers (<%= @usuario.microvideos.count %>)</h3>
      <ol class="microposts">
        <%= render @microvideos %>
      </ol>
      <%= will_paginate @microvideos %>
    <% end %>
  </div>
</div>