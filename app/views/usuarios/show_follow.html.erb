<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @usuario %>
      <h1><%= @usuario.name %></h1>
      <span><%= link_to "Ver mi perfil", @usuario %></span>
      <span><b>Pillers:</b> <%= @usuario.microvideos.count %></span>
    </section>
    <section>
      <%= render 'shared/stats' %>
      <% if @usuarios.any? %>
        <div class="user_avatars">
          <% @usuarios.each do |usuario| %>
            <%= link_to gravatar_for(usuario, size: 10), usuario %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @usuarios.any? %>
      <ul class="users">
        <%= render @usuarios %>
      </ul>
      <%= will_paginate  @usuarios%>
    <% end %>
  </div>
</div>