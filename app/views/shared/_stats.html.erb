<% @usuario ||= current_usuario %>
<div class="stats">
  <a href="<%= following_usuario_path(@usuario) %>">
    <strong id="following" class="stat">
      <%= @usuario.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_usuario_path(@usuario) %>">
    <strong id="followers" class="stat">
      <%= @usuario.followers.count %>
    </strong>
    followers
  </a>
</div>