<% @usuario ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@usuario) %>">
    <strong id="following" class="stat">
      <%= @usuario.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@usuario) %>">
    <strong id="followers" class="stat">
      <%= @usuario.followers.count %>
    </strong>
    followers
  </a>
</div>