<%= form_for(@microvideo) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	 <h4> Selecciona una categoria:</h4>  
     <%= f.select :categoria, options_for_select(['General', 'Marketing', 'RR.HH.']),
     			  :size => 2,
     			  :prompt => 'Elige una...'%>

  	<%= f.submit "Buscar", class: "btn btn-large btn-warning" %>  	
  </div>
<% end %>